{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Bienvenue !</h1>
                            </div>
                            <form action="{{ path("fos_user_security_check") }}" method="post" class="user">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <div class="form-group">
                                    <input type="text" id="username" class="form-control form-control-user" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Entrez votre email ou identifiant ..."/>
                                </div>
                                <div class="form-group">
                                    <input type="password" id="password" class="form-control form-control-user" name="_password" required="required" autocomplete="current-password" placeholder="Mot de passe" />
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" id="remember_me" class="custom-control-input" name="_remember_me" value="on" />
                                        <label for="remember_me" class="custom-control-label">{{ 'security.login.remember_me'|trans }}</label>
                                    </div>
                                </div>
                                    
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                    
                                <input type="submit" id="_submit" class="btn btn-primary btn-user btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            {#                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                                  Login
                                </a>
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                  <i class="fab fa-google fa-fw"></i> Login with Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                  <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                </a>#}
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="{{path('fos_user_resetting_request')}}">Mot de passe oublié ?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="{{path('fos_user_registration_register')}}">Créer un compte !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
</div>