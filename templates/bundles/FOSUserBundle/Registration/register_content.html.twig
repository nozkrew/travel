{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Créer un compte !</h1>
              </div>
              {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register user'}}) }}
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                      {{ form_widget(form.prenom, {'attr':{'class':'form-control form-control-user', 'placeholder':'Prénom'}}) }}
                  </div>
                  <div class="col-sm-6">
                    {{ form_widget(form.nom, {'attr':{'class':'form-control form-control-user', 'placeholder':'Nom'}}) }}
                  </div>
                </div>
                <div class="form-group">
                  {{ form_widget(form.username, {'attr':{'class':'form-control form-control-user', 'placeholder':'Entrez un identifiant'}}) }}
                </div>
                <div class="form-group">
                  {{ form_widget(form.email, {'attr':{'class':'form-control form-control-user', 'placeholder':'Entrez une adresse email'}}) }}
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control form-control-user', 'placeholder':'Entrez un mot de passe'}}) }}
                  </div>
                  <div class="col-sm-6">
                      {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control form-control-user', 'placeholder':'Répétez le mot de passe'}}) }}
                  </div>
                </div>
                {{form_rest(form)}}
                <input type="submit" class="btn btn-primary btn-user btn-block" value="{{ 'registration.submit'|trans }}" />
{#                <hr>
                <a href="index.html" class="btn btn-google btn-user btn-block">
                  <i class="fab fa-google fa-fw"></i> Register with Google
                </a>
                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                  <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                </a>#}
              {{ form_end(form) }}
              <hr>
              <div class="text-center">
                <a class="small" href="{{path('fos_user_resetting_request')}}">Mot de passe oublié ?</a>
              </div>
              <div class="text-center">
                <a class="small" href="{{path('fos_user_security_login')}}">Vous avez déja un compte ? Se connecter !</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>